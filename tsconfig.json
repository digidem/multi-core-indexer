{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}
